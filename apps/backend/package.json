{
  "name": "utopia",
  "version": "1.0.0",
  "description": "Utopia",
  "main": "./dist/src/index.js",
  "repository": "https://github.com/joeyfenny/utopia",
  "author": "Joey Fenny",
  "license": "MIT",
  "heroku-run-build-script": true,
  "engines": {
    "node": "22.12.0",
    "yarn": "1.22.19"
  },
  "scripts": {
    "dev": "yarn prisma db push && tsc && nodemon -r dotenv/config --watch 'src/**/*.ts' --exec \"ts-node\" src/index.ts dotenv_config_path=./.env",
    "build": "tsc",
    "prisma:deploy": "npx prisma db push",
    "test": "jest --runInBand --detectOpenHandles",
    "prettier": "prettier --write \"**/*.{tsx,ts,css,md,js,html}\"",
    "eslint": "eslint ./src/**/*.ts --fix",
    "lint": "eslint .",
    "studio": "npx prisma studio",
    "start": "node -r dotenv/config dist/src/index.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/merge": "^9.0.1",
    "@graphql-tools/schema": "^10.0.13",
    "@prisma/client": "5.22.0",
    "@rudderstack/rudder-sdk-node": "^1.1.3",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^7.91.0",
    "@sentry/tracing": "^7.91.0",
    "@slack/webhook": "^7.0.1",
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.3",
    "bcrypt": "^5.1.1",
    "bson": "^6.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "graphql-type-json": "^0.3.2",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.12",
    "stripe": "^14.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mock-jwks": "^1.0.3",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1"
  }
}
